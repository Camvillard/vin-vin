


<div class="main-container">

  <div class="infos-content">

    <h1 class="logo-title">vin</h1>
    <p class="tagline">(c'est aujourd'hui !)</p>

    <div class="event-description">
      <p>on vous a bien cassé les pieds pour cette soirée, voilà le grand jour tant attendu.</p>

    </div>

  </div>
  <!-- enf of infos-content -->

  <div class="noted-wines">

    <p class="uppercased-thin">les vins deja notés</p>
    <% if !@my_notes.empty? %>
      <% @my_notes.each do |note| %>
      <div class="noted-wine">
        <h4><%= note.wine.name %></h4><span class="note"><%= note.rating %>/10</span>
      </div>

      <% end %>
    <% end %>

  </div>



  <div class="show-more-container" id="slide-up-animation">
    <div class="show-more-btn-container">
      <p class="see-wines uppercased-thin"></p>
    </div>
    <% @not_noted_wines.each do |wine| %>
      <div class="not-noted-wine">

        <h3 class="white-title"><%= wine.name %></h3>
        <%= simple_form_for([wine, @note]) do |f| %>
        <div class="form-row">
          <input type="text" name="note[degustation]" value="<%= @degustation.id %>" hidden>
          <%= f.input :rating, label: false, placeholder: "1, 3..." %>
          <%= f.submit "ok" %>
        <% end %>

        </div>

      </div>
    <% end %>


    </div>

  </div>

</div>
